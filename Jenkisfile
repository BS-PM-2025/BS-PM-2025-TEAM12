pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup') {
            steps {
                dir('BS-PM-2025-TEAM12/backend') {
                    sh '''
                        pip3 install --user --upgrade pip
                        pip3 install --user pytest coverage flake8
                    '''
                }
            }
        }
        
        stage('Lint') {
            steps {
                dir('BS-PM-2025-TEAM12/backend') {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                        sh '''
                            mkdir -p reports/lint
                            ~/.local/bin/flake8 . > reports/lint/flake8.txt || true
                        '''
                    }
                }
            }
        }
        
        stage('Tests & Coverage') {
            steps {
                dir('BS-PM-2025-TEAM12/backend') {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                        sh '''
                            mkdir -p reports/tests
                            ~/.local/bin/coverage run --source=. -m pytest || true
                            ~/.local/bin/coverage xml -o reports/tests/coverage.xml
                            ~/.local/bin/coverage html -d reports/tests/htmlcov
                            ~/.local/bin/pytest --junitxml=reports/tests/test-results.xml || true
                        '''
                    }
                }
            }
        }
        
        stage('Debug Reports') {
            steps {
                dir('BS-PM-2025-TEAM12/backend') {
                    sh '''
                        echo "Listing all report files for debug:"
                        find reports
                        ls -lR reports
                    '''
                }
            }
        }
    }
    
    post {
        always {
            echo "Pipeline completed!"
            archiveArtifacts artifacts: 'BS-PM-2025-TEAM12/backend/reports/**/*', allowEmptyArchive: true
            junit 'BS-PM-2025-TEAM12/backend/reports/tests/test-results.xml'
        }
        success {
            echo "Pipeline succeeded!"
        }
        unstable {
            echo "Pipeline unstable (some tests/lint failed)!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
} 
