pipeline {
    agent any

    stages {
        stage('התחלה') {
            steps {
                echo '🚀 ברוך הבא ל-Jenkins!'
                echo '🧠 נבדוק שהפייפליין שלנו רץ כמו שצריך...'
            }
        }

        stage('בדיקה בסיסית') {
            steps {
                script {
                    echo "✅ Hello, your pipeline is up and running!"
                }
            }
        }

        stage('סיום') {
            steps {
                echo '🎉 הפייפליין הסתיים בהצלחה!'
            }
        }
    }
}
